@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h1 class="display-2">Sorry, we've encountered an error.</h1>
                <h2 class="display-6">Please try again. If the error persists, try again later.</h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return to Home</a>
                <p class="display-8">@Model.Message</p>
                
            </div>
        </div>
    </div>
</div>