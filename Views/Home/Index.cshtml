 @model List<Book>
@{
    ViewData["Title"] = "Books";
}

<div class="mb-2">
    <a asp-controller="Book" asp-action="Add">Add New Book </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>PublishYear</th>
            <th>Rating</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishYear</td>
                <td>@book.Rating</td>
                <td>@book.Description</td>
                <td>
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.BookId" asp-route-slug="@book.Slug">Edit</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookId" asp-route-slug="@book.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>